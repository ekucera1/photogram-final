 <h1>All Users</h1>
 <ul>
 <table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Private</th>
      <th>Show Details</th>
      <% if user_signed_in? %>
        <th>Follow Requests</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.private ? "Yes" : "No" %></td>
        <td><%#= link_to "Show Details", user_path(user.username) %></td>
        <% if user_signed_in? %>
          <td>
            <%# Add your logic here for follow requests, e.g., a button to send a follow request %>
            <%= button_to "Request Follow", follow_requests_path(:user_id => user.id), { :method => :post } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
 </ul>
